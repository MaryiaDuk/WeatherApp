<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:tag="character_info_portrait"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/mode_info_bottom_section"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        tools:text="Title"
        android:textStyle="bold"
        android:layout_alignBottom="@+id/info_image"
        android:layout_margin="20dp"
        android:textSize="23sp"
        android:textColor="@color/model_info_title_color"
        android:id="@+id/info_title"
        android:shadowRadius="10"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowColor="@color/model_info_title_shadow_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:elevation="4dp"
        android:layout_width="match_parent"
        android:layout_below="@id/info_title"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <FrameLayout
            android:background="@color/mode_info_bottom_section"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/info_description"
                android:textColor="@color/model_info_bottom_section_text"
                android:layout_margin="20dp"
                android:textSize="17sp"
                android:text="@string/mode_info_description_text"
                tools:text="@string/lorem_ipsum"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </FrameLayout>


    </LinearLayout>


</RelativeLayout>