<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:tag="character_info_landscape"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:elevation="4dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="match_parent">

        <ScrollView
            android:background="@color/mode_info_bottom_section"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    tools:text="Title"
                    android:textStyle="bold"
                    android:layout_alignBottom="@+id/info_image"
                    android:layout_margin="20dp"
                    android:textSize="20dp"
                    android:textColor="@color/model_info_title_color"
                    android:id="@+id/info_title"
                    android:shadowRadius="10"
                    android:shadowDx="3"
                    android:shadowDy="3"
                    android:shadowColor="@color/model_info_title_shadow_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/info_description"
                    android:textColor="@color/model_info_bottom_section_text"
                    android:layout_margin="20dp"
                    android:text="@string/mode_info_description_text"
                    tools:text="@string/lorem_ipsum"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>

        </ScrollView>

    </LinearLayout>


</RelativeLayout>